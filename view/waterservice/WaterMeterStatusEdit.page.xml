<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.org/schema/seam/pages" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jboss.org/schema/seam/pages http://jboss.org/schema/seam/pages-2.3.xsd"
	no-conversation-view-id="/waterservice/WaterMeterStatusList.xhtml"
	login-required="true">

	<begin-conversation join="true" flush-mode="MANUAL" />

	<action execute="#{waterMeterStatusHome.wire}" />

	<param name="waterMeterStatusFrom" />
	<param name="waterMeterStatusId" value="#{waterMeterStatusHome.waterMeterStatusId}" />


	<navigation from-action="#{waterMeterStatusHome.persist}">
		<rule if-outcome="persisted">
			<end-conversation />
			<redirect view-id="/waterservice/WaterMeterStatusList.xhtml" />
		</rule>
	</navigation>

	<navigation from-action="#{waterMeterStatusHome.update}">
		<rule if-outcome="updated">
			<end-conversation />
			<redirect view-id="/waterservice/WaterMeterStatusList.xhtml" />
		</rule>
	</navigation>

	<navigation from-action="#{waterMeterStatusHome.remove}">
		<rule if-outcome="removed">
			<end-conversation />
			<redirect view-id="/waterservice/WaterMeterStatusList.xhtml" />
		</rule>
	</navigation>

</page>
