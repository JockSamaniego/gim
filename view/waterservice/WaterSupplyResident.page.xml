<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.org/schema/seam/pages" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jboss.org/schema/seam/pages http://jboss.org/schema/seam/pages-2.3.xsd"
	login-required="true" no-conversation-view-id="/waterservice/WaterSupplyOtherTransaction.xhtml">

	<begin-conversation flush-mode="MANUAL" join="true" />

	<action execute="#{waterSupplyHome.wire}" />

	<param name="waterSupplyFrom" />
	<param name="waterSupplyId" value="#{waterSupplyHome.waterSupplyId}" />

	<navigation from-action="#{waterSupplyHome.persist}">
		<rule if-outcome="persisted">
			<end-conversation />
			<redirect view-id="/waterservice/WaterSupplyOtherTransaction.xhtml" />
		</rule>
		<rule if-outcome="failed">
			<redirect view-id="/waterservice/WaterSupplyOtherTransaction.xhtml" />
		</rule>
	</navigation>
	<navigation from-action="#{waterSupplyHome.update}">
		<rule if-outcome="updated">
			<end-conversation />
			<redirect view-id="/waterservice/WaterSupplyOtherTransaction.xhtml" />
		</rule>
	</navigation>
	<navigation from-action="#{waterSupplyHome.remove}">
		<rule if-outcome="removed">
			<end-conversation />
			<redirect view-id="/waterservice/WaterSupplyOtherTransaction.xhtml" />
		</rule>
	</navigation>
</page>
