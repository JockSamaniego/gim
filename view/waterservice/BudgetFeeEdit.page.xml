<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.org/schema/seam/pages" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jboss.org/schema/seam/pages http://jboss.org/schema/seam/pages-2.3.xsd"
	no-conversation-view-id="/waterservice/BudgetList.xhtml"
	login-required="true">

	<begin-conversation join="true" flush-mode="MANUAL" />

	<action execute="#{budgetHome.wire}" />

	<param name="budgetFrom" />
	<param name="budgetId" value="#{budgetHome.budgetId}" />

	<navigation from-action="#{budgetHome.persist}">
		<rule if-outcome="persisted">
			<end-conversation />
			<redirect view-id="/waterservice/BudgetDTOList.xhtml" />
		</rule>
	</navigation>

	<navigation from-action="#{budgetHome.update}">
		<rule if-outcome="updated">
			<end-conversation />
			<redirect view-id="/waterservice/BudgetDTOList.xhtml" />
		</rule>
	</navigation>

	<navigation from-action="#{budgetHome.remove}">
		<rule if-outcome="removed">
			<end-conversation />
			<redirect view-id="/waterservice/BudgetDTOList.xhtml" />
		</rule>
	</navigation>

</page>
