<p:document xmlns="http://www.w3.org/1999/xhtml"
	xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:f="http://java.sun.com/jsf/core"
	xmlns:p="http://jboss.com/products/seam/pdf"
	xmlns:h="http://java.sun.com/jsf/html"
	xmlns:s="http://jboss.com/products/seam/taglib"
	xmlns:rich="http://richfaces.org/rich"
	xmlns:c="http://java.sun.com/jstl/core"
	title="#{messages['closingTill']}" subject="report" type="pdf"
	pageSize="A4" margins="20 20 20 20" author="loxageek"
	orientation="portrait" creator="loxageek">

	<f:facet name="header">
		<p:font size="9" name="HELVETICA">
			<p:header borderWidthTop="0" borderWidthBottom="0" alignment="center">
				<p:paragraph>
					<p:table columns="2" widthPercentage="100" spacingAfter="15"
						widths="1 10">
						<f:facet name="defaultCell">
							<p:cell borderWidth="0" />
						</f:facet>
						<p:cell>
							<p:image value="#{gim.institution.logo}" alignment="center" widht="1" height="1">
                                <s:transformImageSize height="70" maintainRatio="true"/>
                            </p:image>
                        </p:cell>
						<p:cell>
							<p:font size="8" style="bold">
								<p:paragraph alignment="center">#{gim.institution.name.toUpperCase()}</p:paragraph>
							</p:font>

							<p:font size="7" style="bold">
								<p:paragraph alignment="center">#{gim.institution.address}. #{messages['institution.phone']}: #{gim.institution.phone} -  #{messages['institution.fax']}: #{gim.institution.fax}</p:paragraph>
							</p:font>

							<p:font size="8" style="bold">
								<p:paragraph alignment="center">#{messages[finantialStatement.criteria.reportType.name()].toUpperCase()}</p:paragraph>
							</p:font>	
							
							<p:font size="8" style="bold">
								<p:paragraph alignment="center">#{messages['finantialStatement.filterBy'].toUpperCase()}: #{messages[finantialStatement.criteria.reportFilter.name()].toUpperCase()}</p:paragraph>
							</p:font>					
						
						</p:cell>
					</p:table>
				</p:paragraph>
			</p:header>
			<p:footer borderWidthTop="1" borderColorTop="blue"
				borderWidthBottom="0" alignment="center">
	 			[<p:pageNumber />]
			</p:footer>
		</p:font>
	</f:facet>

	<p:font size="9" name="HELVETICA">

		<p:paragraph alignment="right" spacingAfter="10">
			<p:font size="8" name="HELVETICA">
				<p:text value="#{messages['common.date']}: " />
				<p:text value="#{currentDatetime}">
					<f:convertDateTime
						pattern="#{messages['common.dateFullTimePattern']}" />
				</p:text>
			</p:font>
		</p:paragraph>

		<p:table columns="2" widthPercentage="100" headerRows="0" widths="1 1"
			spacingAfter="10">
			<f:facet name="defaultCell">
				<p:cell borderWidth="0" />
			</f:facet>

			<p:cell colspan="1">
				<p:paragraph>
					<p:font size="8" style="bold">
						<p:text value="#{messages['common.printBy']}: " />
					</p:font>
					<p:font size="8">
						<p:text value="#{userSession.user.resident.name}" />
					</p:font>
				</p:paragraph>
			</p:cell>
			
				
			<p:cell colspan="1">
				<p:paragraph>
					<p:font size="8" style="bold">
						<p:text value="#{messages['account']}: " />
					</p:font>
					<p:font size="8">
						<p:text value="#{finantialStatement.accountCode}"/>
					</p:font>
				</p:paragraph>
			</p:cell>
			
			<p:cell colspan="1">
				<p:paragraph>
					<p:font size="8" style="bold">
						<p:text value="#{messages['report.startDate']}: " />
					</p:font>
					<p:font size="8">
						<p:text value="#{finantialStatement.criteria.startDate}">
							<f:convertDateTime pattern="#{messages['common.datePattern']}" />
						</p:text>
					</p:font>
				</p:paragraph>
			</p:cell>
			
			<p:cell colspan="1">
				<p:paragraph>
					<p:font size="8" style="bold">
						<p:text value="#{messages['finantialStatement.fiscalPeriod']}: " />
					</p:font>
					<p:font size="8">
						<p:text value="#{finantialStatement.fiscalPeriod.name}" />
					</p:font>
				</p:paragraph>
			</p:cell>
				
			<p:cell colspan="1">
				<p:paragraph>
					<p:font size="8" style="bold">
						<p:text value="#{messages['report.endDate']}: " />
					</p:font>
					<p:font size="8">
						<p:text value="#{finantialStatement.criteria.endDate}">
							<f:convertDateTime pattern="#{messages['common.datePattern']}" />
						</p:text>
					</p:font>
				</p:paragraph>
			</p:cell>
			
			
			
			<p:cell/>

		</p:table>
			
		<p:table spacingBefore='10' columns="5" widthPercentage="100" headerRows="0"  rendered="#{not empty finantialStatement.accountItems}"
			widths="3 4 1 1 1">
			<p:font size="8" style="bold">
				<p:cell colspan="7">
					<p:paragraph borderWidth="1">
						<p:font size="10" style="bold">
							<p:text value="#{messages['accountDetail.municipalBondDetail']}: #{finantialStatement.accountName.toUpperCase()}" />
						</p:font>
					</p:paragraph>
				</p:cell>
			</p:font>
		</p:table>

		<p:table rendered="#{not empty finantialStatement.accountDetails}"
			columns="#{finantialStatement.criteria.reportType.name() == 'COMBINED' ? 5 : 5}" widthPercentage="100" headerRows="0"
			widths="#{finantialStatement.criteria.reportType.name() == 'COMBINED' ? '2 2 4 2 2' : '1 1 6 1 2'}">
			<p:font size="6" style="bold">
				<f:facet name="defaultCell">
					<p:cell borderWidth="0" />
				</f:facet>

				<p:cell horizontalAlignment="center">
					<p:paragraph>
						<p:text value="#{messages['accountDetail.bondNumber']}" />
					</p:paragraph>
				</p:cell>

				<p:cell horizontalAlignment="center">
					<p:paragraph>
						<p:text value="#{messages['accountDetail.identificationNumber']}" />
					</p:paragraph>
				</p:cell>
				
				<p:cell horizontalAlignment="center">
					<p:paragraph>
						<p:text value="#{messages['accountDetail.residentName']}" />
					</p:paragraph>
				</p:cell>
						
				<p:cell horizontalAlignment="center" rendered="#{finantialStatement.criteria.reportType.name() != 'INCOME' and finantialStatement.criteria.reportType.name() != 'QUOTAS_LIQUIDATION'}">
					<p:paragraph>
						<p:text value="#{messages['accountItem.debit']}" />
					</p:paragraph>
				</p:cell>
				
				<p:cell horizontalAlignment="center" rendered="#{finantialStatement.criteria.reportType.name() == 'INCOME' || finantialStatement.criteria.reportType.name() == 'QUOTAS_LIQUIDATION' || finantialStatement.criteria.reportType.name() == 'COMBINED'}">
					<p:paragraph>
						<p:text value="#{messages['accountItem.credit']}" />
					</p:paragraph>
				</p:cell>
				
				<p:cell horizontalAlignment="center">
					<p:paragraph>
						<p:text value="#{messages['accountDetail.expirationDate']}" />
					</p:paragraph>
				</p:cell>
			
			</p:font>
			
			<p:font size="6">
				<ui:repeat value="#{finantialStatement.accountDetails}" var="_var">
					<p:cell> 
						<p:paragraph>
							<p:text value="#{_var.bondNumber}" />
						</p:paragraph>
					</p:cell>
					
					<p:cell>
						<p:paragraph>
							<p:text value="#{_var.identificationNumber}" />
						</p:paragraph>
					</p:cell>
					
					<p:cell>
						<p:paragraph>
							<p:text value="#{_var.residentName}" />
						</p:paragraph>
					</p:cell>
					
					<p:cell horizontalAlignment="right" rendered="#{finantialStatement.criteria.reportType.name() != 'INCOME' and finantialStatement.criteria.reportType.name() != 'QUOTAS_LIQUIDATION'}" >
						<p:paragraph>
							<p:text value="#{_var.debit}" />
						</p:paragraph>
					</p:cell>

					<p:cell horizontalAlignment="right" rendered="#{finantialStatement.criteria.reportType.name() == 'INCOME' || finantialStatement.criteria.reportType.name() == 'QUOTAS_LIQUIDATION' || finantialStatement.criteria.reportType.name() == 'COMBINED'}">
						<p:paragraph>							
							<p:text value="#{_var.credit}" />
						</p:paragraph>
					</p:cell>					
			
					<p:cell horizontalAlignment="center"> 
						<p:paragraph>
							<p:text value="#{_var.expirationDate}" >
								<f:convertDateTime pattern="#{messages['common.datePattern']}"/>
							</p:text>
						</p:paragraph>
					</p:cell>
			
				</ui:repeat>
			</p:font>
		</p:table>
		
		<p:table rendered="#{not empty finantialStatement.accountDetails}"
			columns="#{finantialStatement.criteria.reportType.name() == 'COMBINED' ? 5 : 5}" widthPercentage="100" headerRows="0"
			widths="#{finantialStatement.criteria.reportType.name() == 'COMBINED' ? '2 2 4 2 2' : '1 1 6 1 2'}">
			
			<p:font size="9" style="bold">
				<f:facet name="defaultCell">
					<p:cell borderWidth="0" />
				</f:facet>

				<p:cell horizontalAlignment="center" borderWidth="0"/>
				
				<p:cell horizontalAlignment="center" borderWidth="0"/>			
								
				<p:cell horizontalAlignment="center">
					<p:paragraph>
						<p:text value="#{messages['totals']}" />
					</p:paragraph>
				</p:cell>
				
				<p:cell horizontalAlignment="right" rendered="#{finantialStatement.criteria.reportType.name() != 'INCOME' and finantialStatement.criteria.reportType.name() != 'QUOTAS_LIQUIDATION'}">
					<p:paragraph>
						<p:text value="#{finantialStatement.detailTotal.debit}">
							<f:convertNumber maxFractionDigits="#{messages['common.maxFractionDigits']}"
											 minFractionDigits="#{messages['common.minFractionDigits']}" />
						</p:text>
					</p:paragraph>
				</p:cell>
				
				<p:cell horizontalAlignment="right" rendered="#{finantialStatement.criteria.reportType.name() == 'INCOME' || finantialStatement.criteria.reportType.name() == 'COMBINED' || finantialStatement.criteria.reportType.name() == 'QUOTAS_LIQUIDATION'}">
					<p:paragraph>
						<p:text value="#{finantialStatement.detailTotal.credit}">
							<f:convertNumber maxFractionDigits="#{messages['common.maxFractionDigits']}"
											 minFractionDigits="#{messages['common.minFractionDigits']}" />
						</p:text>
					</p:paragraph>
				</p:cell>

				<p:cell horizontalAlignment="right">
					<p:paragraph>
						<p:text value="#{workdayHome.totalCashCollected}" />
					</p:paragraph>
				</p:cell>
			</p:font>
		</p:table>

	</p:font>
</p:document>