<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.org/schema/seam/pages"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://jboss.org/schema/seam/pages http://jboss.org/schema/seam/pages-2.3.xsd"
      no-conversation-view-id="/binnaclecrv/BinnacleCRVList.xhtml"
      login-required="true">
      
  
   <begin-conversation join="true" flush-mode="MANUAL"/>

   <action execute="#{binnacleCRVHome.wire}"/>

   <action execute="#{binnacleCRVHome.loadInventory}"/>

   <param name="binnacleCRVFrom"/>
   <param name="binnacleCRVId" value="#{binnacleCRVHome.binnacleCRVId}"/>


   <navigation from-action="#{binnacleCRVHome.persist}">
      <rule if-outcome="persisted">
         <end-conversation/>
         <redirect view-id="/binnaclecrv/BinnacleCRVList.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{binnacleCRVHome.update}">
      <rule if-outcome="updated">
         <end-conversation/>
         <redirect view-id="/binnaclecrv/BinnacleCRVList.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{binnacleCRVHome.remove}">
      <rule if-outcome="removed">
         <end-conversation/>
         <redirect view-id="/binnaclecrv/BinnacleCRVList.xhtml"/>
      </rule>
   </navigation>

</page>
