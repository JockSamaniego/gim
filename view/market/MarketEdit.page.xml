<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.org/schema/seam/pages" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jboss.org/schema/seam/pages http://jboss.org/schema/seam/pages-2.3.xsd"
	no-conversation-view-id="/market/MarketList.xhtml" login-required="true">

	<begin-conversation join="true" flush-mode="MANUAL" />

	<action execute="#{marketHome.wire}" />

	<param name="marketFrom" />
	<param name="marketId" value="#{marketHome.marketId}" />
	<param name="marketRentOperation" value="#{marketHome.marketRentOperation}" />


	<navigation from-action="#{marketHome.persist}">
		<rule if-outcome="persisted">
			<end-conversation />
			<redirect view-id="/market/MarketList.xhtml" />
		</rule>
	</navigation>

	<navigation from-action="#{marketHome.update}">
		<rule if-outcome="updated">
			<end-conversation />
			<redirect view-id="/market/MarketList.xhtml" />
		</rule>
	</navigation>

	<navigation from-action="#{marketHome.remove}">
		<rule if-outcome="removed">
			<end-conversation />
			<redirect view-id="/market/MarketList.xhtml" />
		</rule>
	</navigation>

</page>
