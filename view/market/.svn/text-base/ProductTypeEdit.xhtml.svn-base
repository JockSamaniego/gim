<!DOCTYPE composition PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
    "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<ui:composition xmlns="http://www.w3.org/1999/xhtml"
	xmlns:s="http://jboss.com/products/seam/taglib"
	xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:f="http://java.sun.com/jsf/core"
	xmlns:h="http://java.sun.com/jsf/html"
	xmlns:a="http://richfaces.org/a4j"
	xmlns:rich="http://richfaces.org/rich"
	template="../layout/template.xhtml">

	<ui:define name="body">

		<h:form id="productType" styleClass="edit">

			<h:outputText styleClass="formTitle"
				value="#{messages['productType.editFormTitle']}" />

			<rich:panel>
				<f:facet name="header">#{messages['productType']}</f:facet>


				<s:decorate id="nameField" template="../layout/edit.xhtml">
					<ui:define name="label">#{messages['productType.name']}</ui:define>
					<h:inputText id="name" required="true" size="25" maxlength="25"
						value="#{productTypeHome.instance.name}" style="text-transform: uppercase">
						<a:support event="onblur" reRender="nameField"
							bypassUpdates="true" ajaxSingle="true" />
					</h:inputText>
				</s:decorate>

				<s:decorate id="isActiveField" template="../layout/edit.xhtml">
					<ui:define name="label">#{messages['productType.isActive']}</ui:define>
					<h:selectBooleanCheckbox id="isActive"
						value="#{productTypeHome.instance.isActive}" />
				</s:decorate>

				<div style="clear: both">
					<span class="required">*</span>
					#{messages['common.requiredFields']}
				</div>

			</rich:panel>

			<div class="actionButtons">

				<h:commandButton id="save" value="#{messages['common.save']}"
					action="#{productTypeHome.persist}"
					disabled="#{!productTypeHome.wired}"
					rendered="#{!productTypeHome.managed}" />

				<h:commandButton id="update" value="#{messages['common.save']}"
					action="#{productTypeHome.update}"
					rendered="#{productTypeHome.managed}" />

				<!-- h:commandButton id="delete" value="Delete"
					action="# { productTypeHome.remove}" immediate="true"
					rendered="# { productTypeHome.managed}" /-->

				<s:button id="cancelEdit" value="#{messages['common.cancel']}"
					propagation="end" view="/market/ProductTypeList.xhtml" />
					
			</div>
		</h:form>
	</ui:define>

</ui:composition>
