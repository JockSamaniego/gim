<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.org/schema/seam/pages"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://jboss.org/schema/seam/pages http://jboss.org/schema/seam/pages-2.3.xsd"
      no-conversation-view-id="/SidewalkMaterialList.xhtml"
      login-required="true">

   <begin-conversation join="true" flush-mode="MANUAL"/>

   <action execute="#{timePeriodHome.wire}"/>

   <param name="timePeriodFrom"/>
   <param name="timePeriodId" value="#{timePeriodHome.timePeriodId}"/>


   <navigation from-action="#{timePeriodHome.persist}">
      <rule if-outcome="persisted">
         <end-conversation/>
         <redirect view-id="/revenue/TimePeriodList.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{timePeriodHome.update}">
      <rule if-outcome="updated">
         <end-conversation/>
         <redirect view-id="/revenue/TimePeriodList.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{timePeriodHome.remove}">
      <rule if-outcome="removed">
         <end-conversation/>
         <redirect view-id="/revenue/TimePeriodList.xhtml"/>
      </rule>
   </navigation>

</page>
