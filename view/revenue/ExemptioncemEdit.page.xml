<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.2.xsd"
      no-conversation-view-id="/BusinessList.xhtml"
      login-required="true">

   <begin-conversation join="true" flush-mode="MANUAL"/>

   <action execute="#{exemptioncemHome.wire}"/>

   <param name="exemptionFrom"/>
   <param name="exemptionId" value="#{exemptionHome.exemptionId}"/>
   
   <navigation from-action="#{exemptioncemHome.save()}">
      <rule if-outcome="persisted">
         <end-conversation/>
         <redirect view-id="/revenue/ExemptioncemList.xhtml"/>
      </rule>
      <rule if-outcome="updated">
         <end-conversation/>
         <redirect view-id="/revenue/ExemptioncemList.xhtml"/>
      </rule>
      <rule if-outcome="failed">         
         <redirect view-id="/revenue/ExemptioncemEdit.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{exemptioncemHome.remove}">
      <rule if-outcome="removed">
         <end-conversation/>
         <redirect view-id="/revenue/ExemptioncemList.xhtml"/>
      </rule>
   </navigation>

</page>
