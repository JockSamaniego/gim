<!DOCTYPE composition PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
    "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<ui:composition xmlns="http://www.w3.org/1999/xhtml"
    xmlns:s="http://jboss.com/products/seam/taglib"
    xmlns:ui="http://java.sun.com/jsf/facelets"
    xmlns:f="http://java.sun.com/jsf/core"
    xmlns:h="http://java.sun.com/jsf/html"
    xmlns:rich="http://richfaces.org/rich"
   	xmlns:a="http://richfaces.org/a4j"
    template="../layout/template.xhtml">

<ui:define name="body">

    <h:form id="exemptionSearch" styleClass="edit">
    
    	<ui:debug id="uidebug"/>

		<h:outputText styleClass="formTitle" value="#{messages['exemption.manager']}" />
		
        <rich:simpleTogglePanel label="#{messages['exemption.searchFilter']}" switchType="ajax">

			<s:decorate template="../layout/display.xhtml">
				<ui:define name="label">#{messages['fiscalPeriod.title']}</ui:define>
				<h:selectOneMenu id="fiscalPeriod" value="#{exemptionList.fiscalPeriod}">
					<s:selectItems value="#{fiscalPeriods}" var="type"
						label="#{type.name}"
						noSelectionLabel="#{messages['common.chooseOption']}" />
					<s:convertEntity/>
					<a:support event="onchange" ajaxSingle="true" />
				</h:selectOneMenu>
			</s:decorate>
			
			<s:decorate template="../layout/display.xhtml">
				<ui:define name="label">#{messages['exemption.type']}</ui:define>
				<h:selectOneMenu id="exemptionType" value="#{exemptionList.exemptionType}">
					<s:selectItems value="#{exemptionTypes}" var="exemptionType"
						label="#{exemptionType.name}"
						noSelectionLabel="#{messages['common.chooseOption']}" />
					<s:convertEntity/>
					<a:support event="onchange" ajaxSingle="true" />
				</h:selectOneMenu>
			</s:decorate>
			
            <s:decorate template="../layout/display.xhtml">
				<ui:define name="label">#{messages['common.resident']}</ui:define>
				<h:inputText id="resident" value="#{exemptionList.resident}" size="50" maxlength="50"/>
			</s:decorate>

        </rich:simpleTogglePanel>

        <div class="actionButtons">
            <h:commandButton id="search" value="#{messages['common.search']}" action="/revenue/ExemptionList.xhtml">
                <f:param name="firstResult" value="0"/>
            </h:commandButton>
            <s:button id="reset" value="#{messages['common.reset']}" includePageParams="false"/>
        </div>

    </h:form>

    <rich:panel>
        <f:facet name="header">
        	<h:panelGrid columns="3" columnClasses="headerTitle,">
				<h:outputText
					value="#{messages['exemption.searchResults']} (#{empty exemptionList.resultList ? 0 : (exemptionList.paginated ? exemptionList.resultCount : exemptionList.resultList.size)})" />
		        <s:button view="/revenue/ExemptionEdit.xhtml"
		                    id="create"
		           propagation="none"
		                 value="#{messages['common.create']}">
		            <f:param name="exemptionId"/>
		        </s:button>
		    </h:panelGrid>
        </f:facet>
        
    <div class="results" id="list">

    <h:outputText value="#{messages['common.noResultsReturned']}"
               rendered="#{empty exemptionList.resultList}"/>

    <rich:dataTable id="tableList"
                var="_exemption"
              value="#{exemptionList.resultList}"
           rendered="#{not empty exemptionList.resultList}">
        <h:column>
            <f:facet name="header">
                <ui:include src="../layout/sort.xhtml">
                    <ui:param name="entityList" value="#{exemptionList}"/>
                    <ui:param name="propertyLabel" value="#{messages['exemption.id']}"/>
                    <ui:param name="propertyPath" value="exemption.id"/>
                </ui:include>
            </f:facet>
            <h:outputText value="#{_exemption.id}"/>
        </h:column>
        <h:column>
            <f:facet name="header">
                <ui:include src="../layout/sort.xhtml">
                    <ui:param name="entityList" value="#{exemptionList}"/>
                    <ui:param name="propertyLabel" value="#{messages['resident.dni']}"/>
                    <ui:param name="propertyPath" value="exemption.resident"/>
                </ui:include>
            </f:facet>
            <h:outputText value="#{_exemption.resident.identificationNumber}"/>
        </h:column>
        <h:column>
            <f:facet name="header">
                <ui:include src="../layout/sort.xhtml">
                    <ui:param name="entityList" value="#{exemptionList}"/>
                    <ui:param name="propertyLabel" value="#{messages['resident']}"/>
                    <ui:param name="propertyPath" value="exemption.resident"/>
                </ui:include>
            </f:facet>
            <h:outputText value="#{_exemption.resident.name}"/>
        </h:column>
        <h:column>
            <f:facet name="header">
                <ui:include src="../layout/sort.xhtml">
                    <ui:param name="entityList" value="#{exemptionList}"/>
                    <ui:param name="propertyLabel" value="#{messages['fiscalPeriod.title']}"/>
                    <ui:param name="propertyPath" value="exemption.fiscalPeriod"/>
                </ui:include>
            </f:facet>
            <h:outputText value="#{_exemption.fiscalPeriod.name}"/>
        </h:column>
        <h:column>
            <f:facet name="header">
                <ui:include src="../layout/sort.xhtml">
                    <ui:param name="entityList" value="#{exemptionList}"/>
                    <ui:param name="propertyLabel" value="#{messages['exemption.type']}"/>
                    <ui:param name="propertyPath" value="exemption.exemptionType"/>
                </ui:include>
            </f:facet>
            <h:outputText value="#{_exemption.exemptionType.name}"/>
        </h:column>
        <rich:column styleClass="right">
            <f:facet name="header">#{messages['exemption.patrimony']}</f:facet>
            <h:outputText value="#{_exemption.patrimony}" />
        </rich:column>
        <h:column style="text-align: center;">
            <f:facet name="header">
                <ui:include src="../layout/sort.xhtml">
                    <ui:param name="entityList" value="#{exemptionList}"/>
                    <ui:param name="propertyLabel" value="#{messages['exemption.active']}"/>
                    <ui:param name="propertyPath" value="exemption.active"/>
                </ui:include>
            </f:facet>
			<h:selectBooleanCheckbox value="#{_exemption.active}" disabled="true"/>
        </h:column>
        <rich:column styleClass="action">
            <f:facet name="header">#{messages['common.action']}</f:facet>
            <s:button view="/revenue/ExemptionEdit.xhtml"
                   value="#{messages['common.edit']}"
             propagation="none"
                      id="exemptionEdit"
                rendered="#{empty from}">
                <f:param name="exemptionId"
                        value="#{_exemption.id}"/>
            </s:button>
        </rich:column>
    </rich:dataTable>

    </div>
    </rich:panel>

		<div class="tableControl">

			<s:link view="/revenue/ExemptionList.xhtml"
				rendered="#{exemptionList.previousExists}"
				value="#{messages.left}#{messages.left} #{messages['common.firstPage']}" id="firstPage">
				<f:param name="firstResult" value="0" />
			</s:link>

			<s:link view="/revenue/ExemptionList.xhtml"
				rendered="#{exemptionList.previousExists}"
				value="#{messages.left} #{messages['common.previousPage']}" id="previousPage">
				<f:param name="firstResult"
					value="#{exemptionList.previousFirstResult}" />
			</s:link>

			<s:link view="/revenue/ExemptionList.xhtml"
				rendered="#{exemptionList.nextExists}"
				value="#{messages['common.nextPage']} #{messages.right}" id="nextPage">
				<f:param name="firstResult" value="#{exemptionList.nextFirstResult}" />
			</s:link>

			<s:link view="/revenue/ExemptionList.xhtml"
				rendered="#{exemptionList.nextExists}"
				value="#{messages['common.lastPage']} #{messages.right}#{messages.right}" id="lastPage">
				<f:param name="firstResult" value="#{exemptionList.lastFirstResult}" />
			</s:link>

		</div>


</ui:define>

</ui:composition>
