<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.org/schema/seam/pages"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://jboss.org/schema/seam/pages http://jboss.org/schema/seam/pages-2.3.xsd"
      no-conversation-view-id="/common/UserList.xhtml"
      login-required="true">
      
  
   <begin-conversation join="true" flush-mode="MANUAL"/>
   
   <action execute="#{userHome.wire}"/>

   <param name="userFrom"/>
   <param name="userId" value="#{userHome.userId}"/>

   <navigation from-action="#{userHome.save()}">
      <rule if-outcome="updated">
         <end-conversation before-redirect="true"/>
         <redirect view-id="/common/UserList.xhtml"/>
      </rule>
      <rule if-outcome="persisted">
         <end-conversation before-redirect="true"/>
         <redirect view-id="/common/UserList.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{userHome.remove}">
      <rule if-outcome="removed">
         <end-conversation before-redirect="true"/>
         <redirect view-id="/common/UserList.xhtml"/>
      </rule>
   </navigation>
   
   <navigation>
      <rule if-outcome="passwordGenerated">
      	 <end-conversation/>
         <redirect view-id="/common/UserList.xhtml"/>
      </rule>
   </navigation>

</page>
