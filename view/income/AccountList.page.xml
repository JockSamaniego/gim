<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.org/schema/seam/pages" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jboss.org/schema/seam/pages http://jboss.org/schema/seam/pages-2.3.xsd" login-required="true">
	
	<begin-conversation join="true" flush-mode="MANUAL"/>
	
	<action execute="#{accountHome.wire}"/>	
	
	 <navigation from-action="#{accountHome.update}">
      <rule if-outcome="updated">
         <end-conversation />
         <redirect view-id="/home.xhtml"/>
      </rule>
      <rule if-outcome="failed">         
         <redirect view-id="/income/AccountList.xhtml"/>
      </rule>
   </navigation>
</page>
