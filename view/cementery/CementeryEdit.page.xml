<?xml version="1.0" encoding="UTF-8"?>
<page login-required="true"
 no-conversation-view-id="/cementery/CementeryList.xhtml"
 xmlns="http://jboss.org/schema/seam/pages"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://jboss.org/schema/seam/pages http://jboss.org/schema/seam/pages-2.3.xsd">
 <begin-conversation flush-mode="MANUAL" join="true"/>
 
 <action execute="#{cementeryHome.wire}"/>
 
 <param name="cementeryFrom"/>
 <param name="cementeryId" value="#{cementeryHome.cementeryId}"/>
 
 <param name="sectionCementeryFrom"/>
 <param name="sectionCementeryId" value="#{sectionCementeryHome.sectionCementeryId}"/>
 
 <navigation from-action="#{unitDeathHome.updateExhumationAndReserve()}">
   <end-conversation/>
   <redirect view-id="/cementery/CementeryList.xhtml"/>
 </navigation>

 <navigation from-action="#{cementeryHome.persist}">
  <rule if-outcome="persisted">
   <end-conversation/>
   <redirect view-id="/cementery/CementeryList.xhtml"/>
  </rule>
 </navigation>
 <navigation from-action="#{cementeryHome.update}">
  <rule if-outcome="updated">
   <end-conversation/>
   <redirect view-id="/cementery/CementeryList.xhtml"/>
  </rule>
 </navigation>
 <navigation from-action="#{cementeryHome.remove}">
  <rule if-outcome="removed">
   <end-conversation/>
   <redirect view-id="/cementery/CementeryList.xhtml"/>
  </rule>
 </navigation>
</page>
